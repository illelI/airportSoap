<UserControl x:Class="AirportClient.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Rejestracja" FontSize="24" Margin="0,0,0,20" />
        <TextBox x:Name="LoginBox" Margin="0,0,0,10" />
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" />
        <TextBox x:Name="NameBox" Margin="0,0,0,10" />
        <TextBox x:Name="SurnameBox" Margin="0,0,0,10" />
        <Button Content="Zarejestruj" Margin="0,0,0,10" Click="Register_Click"/>
        <Button Content="Masz już konto? Zaloguj się" Click="BackToLogin_Click"/>
    </StackPanel>
</UserControl>
